SHELL=  /bin/sh
ISIZE = 4
RSIZE = 8
FCOMP=  ifort -nofree
FFLAGS= -O2 -fpe0 -i$(ISIZE) -r$(RSIZE)

gettrk:      gettrk_main.f gettrk_modules.o 
	@echo " "
	@echo "  Compiling the main tracker program ....."
	$(FCOMP) $(FFLAGS) gettrk_modules.o gettrk_main.f $(LIBS) -o gettrk
	@echo " "

gettrk_modules.o:    gettrk_modules.f
	@echo " "
	@echo "  Compiling the tracker modules....."
	$(FCOMP) $(FFLAGS) -c gettrk_modules.f -o gettrk_modules.o
	@echo " "

CMD =   gettrk

clean:
	-rm -f  *.o  *.mod

install:
	mv $(CMD) ../../exec/$(CMD)
