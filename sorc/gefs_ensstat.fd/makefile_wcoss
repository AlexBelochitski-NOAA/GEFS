SHELL=  /bin/bash
CMD=	gefs_ensstat
FC=     ifort
FFLAGS=  -traceback  -list
LDFLAGS=
INCS=
SRCS=	gefs_ensstat.f 
OBJS=   $(SRCS:.f=.o)
#LIBS    = -L/scratch2/portfolios/NCEPDEV/global/save/Shrinivas.Moorthi/para/lib -lbacio_4 -lw3lib-2.0_4 -lip_4 -lsp_4
LIBS    = -L/nwprod/lib -lbacio_v2.0.1_4 -lw3nco_v2.0.6_4


#$(CMD): $(SRCS)
#	$(FC) $(FOPTS) $(SRCS) $(LIBS) -o $(CMD)

# Lines from here on down should not need to be changed.  They are the
# actual rules which make uses to build a.out.
#
all:    $(CMD)

$(CMD): $(OBJS)
	$(FC) $(LDFLAGS) $(FFLAGS) -o $(@) $(OBJS) $(LIBS)

$(OBJS):        $(SRCS)
	$(FC) $(FFLAGS) $(INCS) -c $(SRCS)

#$(OBJS):        makefile_wcoss

allclean:       clean all

clean:
	-rm -f $(OBJS)

clobber:        clean
	-rm -f $(CMD)
