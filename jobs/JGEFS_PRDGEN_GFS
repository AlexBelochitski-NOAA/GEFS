#!/bin/ksh

echo `date` $0 `date -u` begin

set -xa
echo `date` $0 begin
date

export gefsmpexec=${gefsmpexec:-mpirun.lsf}

#export APRUN=${gefsmpexec:-mpirun.lsf}
export APRUN=${gefsmpexec_mpmd:-mpirun.lsf}

###################################
# Load the GRIB Utilities module
####################################
# JY . /usrx/local/Modules/default/init/ksh
# JY module load grib_util/v1.0.1
export CNVGRIB=$CNVGRIB21_GFS

####################################
# obtain unique process id (pid) and make temp directory
####################################
export pid=$$
export DATA=${DATA:-${DATAROOT}/${job}.${pid}}

mkdir -p $DATA
cd $DATA

jobgrid=$jobgrid

######################################
# Set up the cycle variable
######################################
export cycle=t${cyc}z

####################################
# Specify NET and RUN Name and model
####################################
export NET=${NET:-gens}
export RUN=${RUN:-gefs}

####################################
# File To Log Msgs
####################################
export jlogfile=${jlogfile:-$COMROOT/logs/jlogfiles/jlogfile.${job}.${pid}}

####################################
# Determine Job Output Name on System
####################################
export outid="LL$job"
export jobid="${outid}.o${pid}"
export pgmout="OUTPUT.${pid}"
export pgmerr=errfile

####################################
# Specify Execution Areas
####################################
export HOMEgefs=${HOMEgefs:-${NWROOT}/gefs.${gefs_ver}}
export HOMEgsm=${HOMEgsm:-${NWROOT}/gsm.${gsm_ver}}

export EXECgefs=${EXECgefs:-$HOMEgefs/exec}
export USHgefs=${USHgefs:-$HOMEgefs/ush}
export FIXgefs=${FIXgefs:-$HOMEgefs/fix}
export PARMgefs=${PARMgefs:-$HOMEgefs/parm}

export REDOUT='1>>'
export REDERR='2>'

##############################
# Run setpdy and initialize PDY variables
##############################
setpdy.sh
. PDY

##############################################
# Define COM directories
##############################################
export COMINgfs=${COMINgfs:-$COMROOThps/gfs/prod/gfs.${PDY}/$cyc}
export COMOUT=$COMROOT/${NET}/${envir}/${RUN}.${PDY}

mkdir -m 775 -p $COMOUT/$cyc/pgrb2a1p0
mkdir -m 775 -p $COMOUT/$cyc/pgrb2a2p5
mkdir -m 775 -p $COMOUT/$cyc/pgrb2ap5
mkdir -m 775 -p $COMOUT/$cyc/pgrb2ap25
mkdir -m 775 -p $COMOUT/$cyc/misc/gfs

##############################################
echo set parameters using gefs.parm
##############################################
. $PARMgefs/gefs.parm

export NTHREADS=1

####################################
# Specify Timeout Behavior of Post
#
# SLEEP_TIME - Amount of time to wait for
#              a restart file before exiting
# SLEEP_INT  - Amount of time to wait between
#              checking for restart files
####################################
export SLEEP_TIME=900
export SLEEP_INT=5

####################################
# Specify Forecast Hour Range
####################################
export SHOUR=00
export FHOUR_HIGH=$gfsfhmaxh
export fhoroglist=$gfsfhoroglist
export FHOUR_LOW=$fhmax
export FHINC_HIGH=6
export FHINC_HIGHP5=3
export FHINC_LOW=12

export DO_HD_PGRB=NO
export HDMAX=00

env | sort

#mpmd job with 4 tasks, 1 for 1d, 2 for 2.5d, 3 for 0.5e 4 for 0.25d

#task 1, 1.0 grid
export jobgrid_1=1p0
subdata=${DATA}/${jobgrid_1}
if [ ! -d ${subdata} ]; then mkdir -p ${subdata}; fi
outfile=${subdata}/${jobgrid_1}.out
echo "$HOMEgefs/scripts/exgefs_prdgen_gfs.sh.ecf $jobgrid_1 ${subdata} 2>&1 >${outfile}" >>prdgen_gfs.cmdfile

#task 2, 2.5d grid
export jobgrid_2=2p5
subdata=${DATA}/${jobgrid_2}
if [ ! -d ${subdata} ]; then mkdir -p ${subdata}; fi
outfile=${subdata}/${jobgrid_2}.out
echo "$HOMEgefs/scripts/exgefs_prdgen_gfs.sh.ecf $jobgrid_2 ${subdata} 2>&1 >${outfile}" >>prdgen_gfs.cmdfile

#task 3, 0.5d grid
export jobgrid_3=0p5
subdata=${DATA}/${jobgrid_3}
if [ ! -d ${subdata} ]; then mkdir -p ${subdata}; fi
outfile=${subdata}/${jobgrid_3}.out
echo "$HOMEgefs/scripts/exgefs_prdgen_gfs.sh.ecf $jobgrid_3 ${subdata} 2>&1 >${outfile}" >>prdgen_gfs.cmdfile

#task 4, 0.25d grid
export jobgrid_4=0p25
subdata=${DATA}/${jobgrid_4}
if [ ! -d ${subdata} ]; then mkdir -p ${subdata}; fi
outfile=${subdata}/${jobgrid_4}.out
echo "$HOMEgefs/scripts/exgefs_prdgen_gfs.sh.ecf $jobgrid_4 ${subdata} 2>&1 >${outfile}" >>prdgen_gfs.cmdfile

cat prdgen_gfs.cmdfile
chmod 775 prdgen_gfs.cmdfile
export MP_CMDFILE=${DATA}/prdgen_gfs.cmdfile
export SCR_CMDFILE=$MP_CMDFILE  # Used by mpiserial on Theia
export MP_PGMMODEL=mpmd
rm mpmd_cmdfile
ln -s $MP_CMDFILE mpmd_cmdfile

$APRUN

ERR=$?

if [ $ERR = 0 ]; then
    msg="$job completed normally"
else
    msg="$job FAILED!"
fi

postmsg "$jlogfile" "$msg"

##############################
# Remove the Temporary working directory
##############################
cd $DATAROOT
if [ ${KEEPDATA:-NO} = NO ] ; then rm -rf $DATA ; fi

echo `date` $0 `date -u` end

exit $ERR

